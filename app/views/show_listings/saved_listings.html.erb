<h4 class="text-center">Saved Listings (<%= @listings.count %>)</h4>

<div id="accordion">
  <% @listings.each do |listing| %>
    <div class="card">
      <div class="card-header" id="headingOne" data-toggle="collapse" data-target="#collapse<%= listing.id %>" aria-expanded="false" aria-controls="collapse<%= listing.id %>">
        <h5 class="mb-0 row">
          <div class="col-sm-6">
            <i class="fa fa-home"></i>
            <span><%= listing.address %></span>
          </div>
          <div class="col-sm-2">
            <i class="fas fa-dollar-sign"></i>
            <span>700</span>
          </div>
          <div class="col-sm-2">
            <i class="fas fa-walking"></i>
            <span><%= listing.uw_commute %></span>
          </div>
          <div class="col-sm-2">
            <i class="far fa-calendar-alt"></i>
            <%= listing.start_date.strftime("%m-%d-%Y") %>
          </div>
        </h5>
      </div>

      <div id="collapse<%= listing.id %>" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
        <div class="card-body">
          <p>This will be some info about the listing</p>
          <%= link_to "View Listing", listing_path(listing_id: listing.id)%>
        </div>
      </div>
    </div>
  <% end %>
</div>
