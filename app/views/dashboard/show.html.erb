<div class="col-sm-8 offset-sm-2">
  <div class="text-center mb-3">
    <h2>Welcome to your Dashboard!</h2>
    <%= link_to "Create a new listing!", listings_new_path, class: "btn btn-primary mt-2" %>
    <%= link_to "Sign out", sign_out_path %>
  </div>
  <br/>
  <h4>My Listings (<%= @user.listings.count %>)</h4>
  <div class="row mb-5">
    <% @user.listings.each do |listing| %>
      <div class="col-sm-4">
        <%= link_to "View Listing", listing_path(listing_id: listing.id)%>
      </div>
    <% end %>
  </div>
  <h4>All Listings (<%= @all_listings.count %>)</h4>
  <div class="row mb-5">
    <% @all_listings.each do |listing| %>
      <div class="col-sm-4">
        <%= link_to "View Listing", listing_path(listing_id: listing.id)%>
      </div>
    <% end %>
  </div>
</div>
