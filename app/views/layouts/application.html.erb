<!DOCTYPE html>
<html>
  <head>
    <title>Sublet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all'  %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %> text-center mb-0">
              <%= value %>
        </div>
    <% end %>
    <% if current_user.present? %>
      <div class="header">
        <div class="row text-left m-0">
          <div class="col-sm-12 text-center">
            <%= link_to "Dashboard", user_root_path, class: "header-link ml-2 mr-2" %>
            <%= link_to "My Listings", my_listings_path, class: "header-link ml-2 mr-2" %>
            <%= link_to "All Listings", all_listings_path, class: "header-link ml-2 mr-2" %>
            <%= link_to "Saved Listings", saved_listings_path, class: "header-link ml-2 mr-2" %>
            <%= link_to "Applied Listings", applied_listings_path, class: "header-link ml-2 mr-2" %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="col-sm-10 offset-sm-1 mt-5 mb-5">
      <%= yield %>
    </div>
  </body>
  <script>
    $(function() {
      setTimeout(function(){
        $('.alert').fadeOut(500, function() {});
      }, 1000);
    });
  </script>
</html>
