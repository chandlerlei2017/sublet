<!DOCTYPE html>
<html>
  <head>
    <title>Sublet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all'  %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %> text-center mb-0">
              <%= value %>
        </div>
    <% end %>
    <% if current_user.present? %>
      <%= render 'shared/header' %>
    <% end %>
    <% if current_path != '/' %>
      <div class="col-sm-10 offset-sm-1 mt-5 mb-5">
        <%= yield %>
      </div>
    <% else %>
      <%= yield %>
    <% end %>
  </body>
  <script>
    $(function() {
      setTimeout(function(){
        $('.alert').fadeOut(500, function() {});
      }, 1000);
    });
  </script>
</html>
