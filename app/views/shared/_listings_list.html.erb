<div id="accordion">
  <% listings.each do |listing| %>
    <div class="card">
      <div class="card-header" id="headingOne" data-toggle="collapse" data-target="#collapse<%= listing.id %>" aria-expanded="false" aria-controls="collapse<%= listing.id %>">
        <h5 class="mb-0 row">
          <div class="col-sm-6">
            <i class="<%= t('building_icon')[listing.building_type] %>"></i>
            <span><%= listing.address %></span>
          </div>
          <div class="col-sm-2">
            <i class="fas fa-dollar-sign"></i>
            <span><%= listing.cost %></span>
          </div>
          <div class="col-sm-2">
            <i class="<%= t('commute_icon')[listing.transport_mode] %>" ></i>
            <span><%= listing.uw_commute %></span>
          </div>
          <div class="col-sm-2">
            <i class="far fa-calendar-alt"></i>
            <%= listing.created_at.strftime("%m-%d-%Y") %>
          </div>
        </h5>
      </div>

      <div id="collapse<%= listing.id %>" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
        <div class="card-body">
          <h5><%= listing.name%></h5>
          <div class="row mt-3">
            <div class="col-sm-3">
              <p><strong>Lister: </strong><%= listing.user.email %></p>
            </div>
            <div class="col-sm-3">
              <p><strong>Start Date: </strong><%= listing.start_date.strftime('%m-%d-%Y') %></p>
            </div>
            <div class="col-sm-3">
              <p><strong>End Date: </strong><%= listing.end_date.strftime('%m-%d-%Y') %></p>
            </div>
            <div class="col-sm-3">
              <p><strong>Term: </strong><%= ((listing.end_date - listing.start_date)/2628002.88).round %> months </p>
            </div>
            <div class="col-sm-12">
              <p><strong>Description: </strong></p>
              <p><%= listing.description %></p>
            </div>
          </div>
          <%= link_to "View Listing", listing_path(listing_id: listing.id)%>
        </div>
      </div>
    </div>
  <% end %>
</div>
