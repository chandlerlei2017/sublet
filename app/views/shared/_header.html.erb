<div class="header">
  <div class="row" style="width: 100%">
    <div class="col-sm-10 text-left">
      <%= link_to "Dashboard", user_root_path, class: "header-link ml-2 mr-2" %>
      <%= link_to "My Listings", my_listings_path, class: "header-link ml-2 mr-2" %>
      <%= link_to "All Listings", all_listings_path, class: "header-link ml-2 mr-2" %>
      <%= link_to "Saved Listings", saved_listings_path, class: "header-link ml-2 mr-2" %>
      <%= link_to "Applied Listings", applied_listings_path, class: "header-link ml-2 mr-2" %>
    </div>
    <div class="col-sm-2">
      <div class="row">
        <div class="dropdown">
          <i class="fas fa-bell fa-lg notify-icon mt-2 mr-2" data-toggle="dropdown"></i>
          <div class="dropdown-menu dropdown-menu dropdown-menu-right">
            <% current_user.notifications.each do |notification| %>
              <%= link_to "#{notification.email} #{t('notif_message')[notification.notif_type]}", listing_path(listing_id: notification.listing_id), class: "dropdown-item"%>
            <% end %>
          </div>
        </div>
        <%= link_to "Sign-out", sign_out_path, class: "notify-icon ml-2" %>
      </div>
    </div>
  </div>
</div>
