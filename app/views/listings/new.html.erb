<h2 class="text-center">Please fill out the form to list your sublet!</h2>
<%= form_for :listing, url: listings_create_path do |f| %>
  <div class="row mt-5">
    <div class="form-group col-sm-4">
      <%= f.label "Building Name" %>
      <%= f.text_field :name, class: "form-control", required: "true"%>
    </div>
    <div class="form-group col-sm-4">
      <%= f.label :start_date %>
      <%= f.date_field :start_date, class: "form-control", required: "true"%>
    </div>
    <div class="form-group col-sm-4">
      <%= f.label :end_date %>
      <%= f.date_field :end_date, class: "form-control", required: "true"%>
    </div>
    <div class="form-group col-sm-4">
      <%= f.label 'Cost/Month' %>
      <%= f.text_field :cost, class: "form-control", required: "true"%>
    </div>
    <div class="form-group col-sm-4">
      <%= f.label :building_type %>
      <%= f.select :building_type, options_for_select([
          ["Apartment", 1],
          ["Condo", 2]
        ]), { prompt: true }, { class: "form-control", required: "true" } %>
    </div>
    <div class="form-group col-sm-4">
      <%= f.label 'Utilities/Internet' %>
      <%= f.select :utilities, options_for_select([
          ["Included", 1],
          ["Extra", 2]
        ]), { prompt: true }, { class: "form-control", required: "true" } %>
    </div>
    <div class="form-group col-sm-8">
      <%= f.label :street %>
      <%= f.text_field :street, class: "form-control", required: "true"%>
    </div>
    <div class="form-group col-sm-4">
      <%= f.label :city %>
      <%= f.text_field :city, class: "form-control", required: "true"%>
    </div>
    <div class="form-group col-sm-4">
      <%= f.label :province %>
      <%= f.select :province, options_for_select([
          ["AB", "AB"],
          ["BC", "BC"],
          ["NL", "NL"],
          ["NS", "NS"],
          ["ON", "ON"],
          ["NT", "NT"],
          ["BC", "BC"],
          ["ON", "ON"],
          ["PE", "PE"],
          ["SK", "SK"],
          ["YT", "YT"]
        ]), { prompt: true }, { class: "form-control", required: "true" } %>
    </div>
    <div class="form-group col-sm-4">
      <%= f.label :postal_code %>
      <%= f.text_field :postal_code, class: "form-control", required: "true"%>
    </div>
    <div class="form-group col-sm-4">
      <%= f.label "Mode of Transport" %>
      <%= f.select :transport_mode, options_for_select([
          ["Driving", 1],
          ["Walking", 2],
          ["Public Transit", 3],
          ["Bicycling", 4],
        ]), {prompt: true}, { class: "form-control", required: "true" } %>
    </div>
    <div class="form-group col-sm-12">
      <%= f.label :ammenities %>
      <%= f.text_area :ammenities, class: "form-control" %>
    </div>
    <div class="form-group col-sm-12">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
      <%= f.submit "Create my listing!", class: "btn btn-primary mt-5" %>
    </div>
  </div>


<% end %>